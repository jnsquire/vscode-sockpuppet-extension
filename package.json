{
  "name": "vscode-sockpuppet",
  "displayName": "VSCode Sockpuppet",
  "description": "Control VS Code programmatically from Python scripts",
  "version": "0.8.0",
  "publisher": "JoelSquire",
  "author": {
    "name": "Joel Squire"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jnsquire/vscode-sockpuppet-extension.git"
  },
  "bugs": {
    "url": "https://github.com/jnsquire/vscode-sockpuppet-extension/issues"
  },
  "homepage": "https://jnsquire.github.io/vscode-sockpuppet-python/",
  "keywords": [
    "python",
    "automation",
    "api",
    "scripting",
    "ipc",
    "programmatic",
    "control",
    "testing",
    "workflow"
  ],
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages",
    "Testing",
    "Other"
  ],
  "icon": "sockpuppet.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "qna": "marketplace",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-sockpuppet.showStatus",
        "title": "VSCode Sockpuppet: Show Server Status"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
  "watch": "npm-run-all -p watch:*",
  "lint:ts": "eslint src",
  "lint:py": "uv run ruff check python/vscode_sockpuppet/",
  "format:py": "uv run ruff format python/vscode_sockpuppet/",
  "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
  "check-types": "tsc --noEmit",
  "lint": "npm-run-all -p lint:ts lint:py",
    
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
